<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.jacksonstateuniversity" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JacksonStateUniversity"
        tools:ignore="ExtraText">
        android:usesCleartextTraffic="true"

        <activity
            android:name=".Activity.SelectionActivity"
            android:exported="false" />
        <activity
            android:name=".ResetPassword"
            android:exported="false" />
        <activity
            android:name=".WelcomeIntro"
            android:exported="false" />
        <activity
            android:name=".GroupChat"
            android:exported="false" />
        <activity
            android:name=".Activity.GroupActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.FacultyActivity"
            android:exported="false"/>
        <activity
            android:name=".Activity.ChatActivity"
            android:exported="false"/>
        <activity
            android:name=".SignUp.FacultySignUp"
            android:exported="false"/>
        <activity
            android:name=".Student.Student"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".SignUp.StudentSignUp"
            android:exported="false" />
        <activity
            android:name=".Activity.LoginActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.StudentActivity"
            android:exported="false"/>

    </application>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
</manifest>